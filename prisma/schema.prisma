generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL") // (ถ้ามีก็เปิดใช้)
}

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // กรณีใช้ Credential Login
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  orders    Order[]
  cart      Cart? // 1 User มี 1 Active Cart
  reviews   Review[]
  accounts  Account[] // NextAuth
  sessions  Session[] // NextAuth

  @@index([email])
}

model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique // สำคัญมากสำหรับ SEO Friendly URL
  description String   @db.Text
  price       Decimal  @db.Decimal(10, 2) // ห้ามใช้ Float กับเงินเด็ดขาด!
  stock       Int      @default(0)
  images      String[] // เก็บ URL รูปภาพเป็น Array
  isFeatured  Boolean  @default(false) // สินค้าแนะนำ
  isArchived  Boolean  @default(false) // ซ่อนสินค้าแทนการลบ
  categoryId  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  category    Category    @relation(fields: [categoryId], references: [id])
  orderItems  OrderItem[]
  cartItems   CartItem[]
  reviews     Review[]

  @@index([categoryId])
  @@index([slug])
  @@index([isFeatured])
}

model Category {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  products  Product[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Cart {
  id        String   @id @default(cuid())
  userId    String?  @unique // Optional เผื่อทำ Guest Cart (เก็บใน Cookie) ได้ในอนาคต
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user      User?      @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
}

model CartItem {
  id        String  @id @default(cuid())
  cartId    String
  productId String
  quantity  Int

  // Relations
  cart      Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([cartId])
  @@index([productId])
}

model Order {
  id        String      @id @default(cuid())
  userId    String
  status    OrderStatus @default(PENDING)
  isPaid    Boolean     @default(false)
  phone     String      @default("")
  address   String      @default("") // อาจเปลี่ยนเป็น Json หรือ Table แยกถ้าที่อยู่ซับซ้อน
  total     Decimal     @db.Decimal(10, 2)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  // Relations
  user       User        @relation(fields: [userId], references: [id])
  orderItems OrderItem[]

  @@index([userId])
}

// Snapshot ของสินค้า ณ เวลาที่สั่งซื้อ (ป้องกันราคาสินค้าเปลี่ยนแล้ว Order เก่าเพี้ยน)
model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Decimal @db.Decimal(10, 2) // บันทึกราคาตอนซื้อจริง

  // Relations
  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@index([orderId])
  @@index([productId])
}

model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String?
  userId    String
  productId String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([userId])
}

// --- NextAuth Models (จำเป็นถ้าใช้ Google/GitHub Login) ---
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}